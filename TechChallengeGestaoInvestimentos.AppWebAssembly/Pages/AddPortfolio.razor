@page "/addPortfolio"

<h3 class="mb-5">New Portfolio</h3>

@Message

<EditForm Model="PortfolioViewModel" OnValidSubmit="@HandleValidSubmit">

    <DataAnnotationsValidator />
    <ValidationSummary></ValidationSummary>

    <div class="row mb-3 ms-2">
        <label for="name" class="col-sm-3 form-label">Portfolio name:</label>
        <div class="col-sm-5">
            <InputText id="name" class="form-control" @bind-Value="@PortfolioViewModel.Name" placeholder="Enter portfolio name"></InputText>
            <ValidationMessage For="@(() => PortfolioViewModel.Name)" />
        </div>
    </div>

    <button type="submit" class="submit-button mt-3">Save portfolio</button>
</EditForm>